<% if Rails.env.production? %>
  <%= javascript_include_tag GoogleAnalytics::JS_URL, async: true %>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', '<%= GoogleAnalytics::TRACKING_ID %>');
  </script>
<% end %>
