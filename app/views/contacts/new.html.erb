<div class="page-wrapper">
    <!-- Preloader -->
    <%= render 'shared/preloader' %>

    <!-- Main Header -->
    <%= render 'shared/main-header' %>
    <!-- End Main Header -->

    <!-- Page Title -->
    <section class="page-title contact">
        <div class="auto-container">
            <div class="content-box">
                <div class="content-wrapper">
                  <div class="title">
                    <div class="text">Contactez-nous</div>
                    <h1>Établissez votre devis rapidement</h1>
                  </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Title -->

        <!-- Contact Section -->
    <section class="contact-section style-two">
        <div class="auto-container">
            <div class="contact-info-three">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="content">
                            <div class="icon"><span class="flaticon-interface"></span></div>
                            <h4>Équipe de professionnels</h4>
                            <div class="text">Nous soignons notre travail, et rigueur est notre maître-mot</div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="content">
                            <div class="icon"><span class="flaticon-technology"></span></div>
                            <h4>Respect des délais</h4>
                            <div class="text">Nous nous engageons à respecter tout délai imparti</div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="content">
                            <div class="icon"><span class="flaticon-envelopes"></span></div>
                            <h4>Service client inégalé</h4>
                            <div class="text">Nous vous répondrons dans les plus brefs délais.</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="wrapper-box mb-30">
                <div class="row">
                    <div class="col-lg-5">
                        <div class="image"><%= cl_image_tag("background/base_s0vdgv") %></div>
                    </div>
                    <div class="col-lg-7">
                        <div class="contact-form-area">
                            <div class="sec-title small">
                                <span class="sec-title-dec-two"></span>
                                <h2>Vous avez un projet d'investissement immobilier ?</h2>
                                <div class="contact-subtext">Envoyez votre demande en remplissant le formulaire de contact ci-dessous, et notre équipe vous répondra dans les 24 heures (jours ouvrés).</div>
                            </div>
                            <%= render 'shared/contact-form' %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Footer -->
    <%= render 'shared/footer' %>
</div>

<!--Scroll to top-->
<%= render 'shared/scroll-to-top' %>
